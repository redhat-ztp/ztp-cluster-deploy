[all:vars]

pull_secret='<your_pull_secret>'
ai_url="http://192.168.112.199:8080" # url where AI will be populated
# cluster settings
cluster_name="test-aut"
cluster_domain="cluster.testing"
cluster_version=4.8
cluster_sdn="OpenShiftSDN"
